
<div class="container">
  <div class="row">
    <div class="col-sm-4 my-sidebar">
      <%#= render 'sidebar' %>
    </div>
    <div class="col-sm-8">
      <h1>@<%= current_user.username %>'s Feed</h1>
      <p>Where's what your "friends" are saying:</p>
      <ul class="list-group my-list">
        <% @following_tweets.each do |tweet| %>
          <li class="list-group-item my-list-item">
            <p class="list-group-item-heading my-heading">
              @<%= link_to tweet.user.username, show_user_path(id: tweet.user.id) %>
            </p>
            <p class="list-group-item-text">
              <%= tweet.message.html_safe %>
            </p>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
